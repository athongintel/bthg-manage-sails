div(ng-controller='AdminOutOrderNewController as ctrl' ng-init='ctrl.init()')
    div
        div.row
            div.col-xs-12.col-sm-6
                div.panel-header-title #{__('new_outorder')}

    div.panel.panel-default.main-panel
        div.panel-body
            div.row
                div.col-xs-12.col-sm-8
                    label #{__('find_product')}
                    div.panel.panel-default
                        div.panel-body
                            product-search(global='global' on-product-selected='ctrl.selectProduct(selectedProduct)')
                div.col-xs-12.col-sm-4
                    label #{__('new_outorder')}
                    div.panel.panel-default
                        div.panel-body
                            div
                                div.row
                                    div.col-xs-4
                                        label #{__('order_no')}
                                    div.col-xs-8
                                        div.text-right
                                            span {{ahihi}}
                                div
                                    label #{__('select_customer')}
                                    customer-selector(global='global' selected-customer='' on-customer-changed='')


